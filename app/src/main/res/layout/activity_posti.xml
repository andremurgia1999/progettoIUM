<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/posti_toolbar"/>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:layout_marginTop="70dp"
        android:id="@+id/scroll">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/horizontal_scroll">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout">

            <ImageView
                android:layout_width="600dp"
                android:layout_height="600dp"
                android:src="@drawable/seatmap2"
                android:id="@+id/seatmap"
                android:layout_marginLeft="-97dp"
                android:layout_marginRight="-97dp"
                android:layout_marginTop="930dp"
                android:layout_marginBottom="1030dp"
                android:scaleX="4"
                android:scaleY="4"/>

            <ImageView
                android:layout_width="600dp"
                android:layout_height="600dp"
                android:src="@drawable/seatmap2"
                android:id="@+id/seatmap2"
                android:layout_marginLeft="-97dp"
                android:layout_marginRight="-97dp"
                android:layout_marginTop="630dp"
                android:layout_marginBottom="730dp"
                android:scaleX="3"
                android:scaleY="3"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="600dp"
                android:layout_height="600dp"
                android:src="@drawable/seatmap2"
                android:id="@+id/seatmap3"
                android:layout_marginLeft="-97dp"
                android:layout_marginRight="-97dp"
                android:layout_marginTop="330dp"
                android:layout_marginBottom="430dp"
                android:scaleX="2"
                android:scaleY="2"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="600dp"
                android:layout_height="600dp"
                android:src="@drawable/seatmap2"
                android:id="@+id/seatmap4"
                android:layout_marginLeft="-97dp"
                android:layout_marginRight="-97dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="130dp"
                android:scaleX="1"
                android:scaleY="1"
                android:visibility="gone"/>
        </RelativeLayout>
        </HorizontalScrollView>
    </ScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ZoomControls
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="530dp"
            android:id="@+id/zoom"/>

        <ZoomControls
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="530dp"
            android:id="@+id/zoom2" />

        <ZoomControls
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="530dp"
            android:id="@+id/zoom3" />

        <ZoomControls
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="530dp"
            android:id="@+id/zoom4" />

        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:background="@color/back_grey"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/prezzo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posto selezionato:"
                android:textSize="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/border_grey"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 1A"
                android:textSize="20dp"
                android:layout_marginTop="25dp"
                android:textColor="@color/red"
                android:layout_toRightOf="@id/prezzo"/>

            <Button
                android:layout_width="230dp"
                android:layout_height="67dp"
                android:layout_marginTop="7dp"
                android:text="seleziona"
                android:gravity="center"
                android:textSize="17dp"
                android:id="@+id/seleziona"
                android:backgroundTint="@color/turchese"
                android:layout_toRightOf="@+id/prezzo"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="50dp"
                android:onClick="ClickSeleziona"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>