        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Andata"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="22dp"
