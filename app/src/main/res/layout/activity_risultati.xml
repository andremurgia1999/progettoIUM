                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:id="@+id/da"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cagliari (CAG)"
                android:textColor="@color/border_grey"
                android:layout_toRightOf="@+id/da"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:id="@+id/partenza"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="a"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:layout_toRightOf="@+id/partenza"
                android:id="@+id/a"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roma (ROM)"
                android:textColor="@color/border_grey"
                android:layout_toRightOf="@+id/a"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:id="@+id/arrivo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="il"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/da"
                android:textSize="20dp"
                android:id="@+id/il"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25/07/2023"
                android:textColor="@color/border_grey"
                android:layout_below="@+id/da"
                android:layout_toRightOf="@+id/il"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:id="@+id/data"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ritorno"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="22dp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="da"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
