<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation = "vertical">

            <include layout="@layout/chi_siamo_toolbar"/>

            <ImageView
                android:id="@+id/Logo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi siamo"
                android:layout_gravity="center"
                android:textColor="@color/turchese"
                android:textSize="25dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="20dp"
                android:outlineAmbientShadowColor="@color/turchese"
                android:outlineSpotShadowColor="@color/turchese">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Uniti dalla passione per i viaggi"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:textColor="@color/turchese"
                        android:gravity="center"
                        android:textSize="35dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/teal_200"
                        app:cardElevation="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mettiamo i viaggiatori al primo posto, condividendone l'amore per i viaggi."
                                android:layout_marginTop="25dp"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textSize="30dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/color3"
                        app:cardElevation="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Semplificando tutto ciò che è difficile e lavorando per rendere i viaggi facili e accessibili."
                                android:layout_marginTop="10dp"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textSize="30dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/color2"
                        app:cardElevation="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mettiamo sempre le persone al primo posto, trattandole con empatia e rispetto."
                                android:layout_marginTop="28dp"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textSize="30dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/color4"
                        app:cardElevation="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Impariamo, condividiamo e cresciamo"
                                android:layout_marginTop="45dp"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textSize="30dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sempre in movimento"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="left"
                        android:textColor="@color/turchese"
                        android:textSize="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="170dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Siamo un gruppo di persone piene di talento ed entusiasmo dislocate in diverse parti del mondo. \n\nLe innovazioni e le novità non ci spaventano, anzi, ci impegniamo a utilizzare la tecnologia per semplificare le complessità dei viaggi.
                                      \n\nPur collavorando con più compagnie indipendenti, noi di Bolendi siamo una realtà indipendente a livello operativo e abbiamo grandi progetti per il futuro dei viaggi."
                        android:textColor="@color/border_grey"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="20dp"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="La nostra missione"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="left"
                        android:textColor="@color/turchese"
                        android:textSize="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="170dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="La nostra missione: aiutare i viaggiatori a pianificare e prenotare il loro viaggio con la massima facilità e sicurezza.\n\nChe si tratti di utilizzare la tecnologia per semplificare ciò che è complesso o di collegare i viaggiatori con partner fidati per fornire soluzioni oneste e trasparenti, siamo determinati ad aiutare tutti a trovare l'offerta migliore.
                                      \n\nAbbiamo creato un luogo che raccogliesse tutte le opzioni di volo disponibili, per offrire un'alternativa a siti più confusionari che rendono complicata l'organizzazione di un viaggio."
                        android:textColor="@color/border_grey"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="20dp"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cosa offriamo"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="left"
                        android:textColor="@color/turchese"
                        android:textSize="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="170dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ad oggi, noi di Bolendi siamo in grado di offrire ai viaggiatori che utilizzano la nostra applicazione, la ricerca di voli con la possibilità di scegliere i propri criteri di viaggio, permettendo di scegliere le proprie mete in oltre 50 paesi,
                                      con vari collegamenti grazie alla collaborazione con più compagnie aeree.\n\n"
                        android:textColor="@color/border_grey"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="20dp"
                        android:textSize="20dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">
        <include layout="@layout/main_nav_drawer"/>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>