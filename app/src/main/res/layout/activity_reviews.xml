<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation = "vertical">

            <include layout="@layout/reviews_toolbar"/>

            <ImageView
                android:id="@+id/Logo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:srcCompat="@drawable/logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Le nostre recensioni"
                android:layout_gravity="center"
                android:textColor="@color/turchese"
                android:textSize="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I vostri pareri, per noi, sono importanti!"
                android:layout_gravity="center"
                android:textColor="@color/border_grey"
                android:layout_marginTop="7dp"
                android:textSize="20dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/user1"
                        android:id="@+id/photo1"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FedeRossi22"
                        android:layout_toRightOf="@id/photo1"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:textColor="@color/turchese"
                        android:textStyle="bold"
                        android:id="@id/username1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Federico Rossi"
                        android:layout_toRightOf="@id/photo1"
                        android:layout_below="@+id/username1"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="2dp"
                        android:textSize="20dp"
                        android:textColor="@color/turchese"
                        android:textStyle="italic"/>

                    <ImageView
                        android:id="@+id/stars1"
                        android:layout_width="170dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/username1"
                        android:layout_marginLeft="103dp"
                        android:layout_marginTop="24dp"
                        android:src="@drawable/stars5" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/user2"
                        android:id="@+id/photo2"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AleBianchi10"
                        android:layout_toRightOf="@id/photo2"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:textColor="@color/turchese"
                        android:textStyle="bold"
                        android:id="@id/username2"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alessandro Bianchi"
                        android:layout_toRightOf="@id/photo2"
                        android:layout_below="@+id/username2"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="2dp"
                        android:textSize="20dp"
                        android:textColor="@color/turchese"
                        android:textStyle="italic"/>

                    <ImageView
                        android:id="@+id/stars2"
                        android:layout_width="170dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/username2"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="24dp"
                        android:src="@drawable/stars4" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/user3"
                        android:id="@+id/photo3"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MartaVerdi97"
                        android:layout_toRightOf="@id/photo3"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:textColor="@color/turchese"
                        android:textStyle="bold"
                        android:id="@id/username3"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marta Verdi"
                        android:layout_toRightOf="@id/photo3"
                        android:layout_below="@+id/username3"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="2dp"
                        android:textSize="20dp"
                        android:textColor="@color/turchese"
                        android:textStyle="italic"/>

                    <ImageView
                        android:id="@+id/stars3"
                        android:layout_width="170dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/username3"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="24dp"
                        android:src="@drawable/stars5" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/user4"
                        android:id="@+id/photo4"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GiuliNeri7"
                        android:layout_toRightOf="@id/photo4"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:textColor="@color/turchese"
                        android:textStyle="bold"
                        android:id="@id/username4"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giulia Neri"
                        android:layout_toRightOf="@id/photo4"
                        android:layout_below="@+id/username4"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="2dp"
                        android:textSize="20dp"
                        android:textColor="@color/turchese"
                        android:textStyle="italic"/>

                    <ImageView
                        android:id="@+id/stars4"
                        android:layout_width="170dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/username4"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="24dp"
                        android:src="@drawable/stars4" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">
        <include layout="@layout/main_nav_drawer"/>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>