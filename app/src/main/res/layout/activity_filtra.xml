<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FiltraActivity"
        android:orientation="vertical">

        <include layout="@layout/filtra_toolbar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scali"
                android:textSize="23dp"
                android:textColor="@color/turchese"
                android:layout_centerHorizontal="true"
                android:id="@+id/scali"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/scali"
                android:layout_marginTop="5dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diretto"
                        android:textSize="20dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/diretto_text"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/diretto_text"
                        android:layout_marginLeft="10dp"
                        android:checked="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="63dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 scalo"
                        android:textSize="20dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/scalo1_text"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/scalo1_text"
                        android:layout_marginLeft="20dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="63dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2+ scali"
                        android:textSize="20dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/scalo2_text"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/scalo2_text"
                        android:layout_marginLeft="20dp"/>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_grey">
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prezzo"
                android:textSize="23dp"
                android:textColor="@color/turchese"
                android:layout_centerHorizontal="true"
                android:id="@+id/prezzo"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="min"
                android:textSize="15dp"
                android:layout_below="@+id/progressBar"
                android:id="@+id/min"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="max"
                android:textSize="15dp"
                android:layout_below="@+id/progressBar"
                android:id="@+id/max"
                android:layout_marginLeft="330dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qualsiasi"
                android:textSize="20dp"
                android:layout_above="@id/progressBar"
                android:layout_centerHorizontal="true"
                android:id="@+id/progress"/>

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:layout_below="@id/prezzo"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                style="?android:attr/progressBarStyleHorizontal" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prezzo"
                android:id="@+id/seekBar"
                android:layout_marginTop="-1dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_grey"
            android:layout_marginTop="15dp">
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orario di partenza da Cagliari (CAG)"
                android:textSize="23dp"
                android:textColor="@color/turchese"
                android:layout_centerHorizontal="true"
                android:id="@+id/prezzo1"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="15dp"
                android:layout_below="@+id/progressBar1"
                android:id="@+id/min1"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23:59"
                android:textSize="15dp"
                android:layout_below="@+id/progressBar1"
                android:id="@+id/max1"
                android:layout_marginLeft="330dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dopo le ore: Qualsiasi"
                android:textSize="20dp"
                android:layout_above="@id/progressBar1"
                android:layout_centerHorizontal="true"
                android:id="@+id/progress1"/>

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar1"
                android:layout_below="@id/prezzo1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                style="?android:attr/progressBarStyleHorizontal" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prezzo1"
                android:id="@+id/seekBar1"
                android:layout_marginTop="-1dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_grey"
            android:layout_marginTop="10dp">
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orario di partenza da Roma (ROM)"
                android:textColor="@color/turchese"
                android:textSize="23dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/prezzo2"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="15dp"
                android:layout_below="@+id/progressBar2"
                android:id="@+id/min2"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23:59"
                android:textSize="15dp"
                android:layout_below="@+id/progressBar2"
                android:id="@+id/max2"
                android:layout_marginLeft="330dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dopo le ore: Qualsiasi"
                android:textSize="20dp"
                android:layout_above="@id/progressBar2"
                android:layout_centerHorizontal="true"
                android:id="@+id/progress2"/>

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar2"
                android:layout_below="@id/prezzo2"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                style="?android:attr/progressBarStyleHorizontal" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prezzo2"
                android:id="@+id/seekBar2"
                android:layout_marginTop="-1dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_grey"
            android:layout_marginTop="10dp">
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Durata"
                android:textSize="23dp"
                android:textColor="@color/turchese"
                android:layout_centerHorizontal="true"
                android:id="@+id/prezzo3"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0h 0m"
                android:textSize="15dp"
                android:layout_below="@+id/progressBar3"
                android:id="@+id/min3"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24h 0m"
                android:textSize="15dp"
                android:layout_below="@+id/progressBar3"
                android:id="@+id/max3"
                android:layout_marginLeft="305dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qualsiasi"
                android:textSize="20dp"
                android:layout_above="@id/progressBar3"
                android:layout_centerHorizontal="true"
                android:id="@+id/progress3"/>

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar3"
                android:layout_below="@id/prezzo3"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                style="?android:attr/progressBarStyleHorizontal" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prezzo3"
                android:id="@+id/seekBar3"
                android:layout_marginTop="-1dp"/>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>